doctype html
html
  head
    title Company Asset Management
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
    link(rel='stylesheet', href='/styles.css')
    block styles
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.fixed-top
      .container
        a.navbar-brand(href='/') Asset Management
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.mr-auto
            li.nav-item(class=activePage === 'employees' ? 'active' : '')
              a.nav-link(href='/employees') Employee Master
            li.nav-item(class=activePage === 'assets' ? 'active' : '')
              a.nav-link(href='/assets') Asset Master
            li.nav-item(class=activePage === 'assetCategories' ? 'active' : '')
              a.nav-link(href='/assetCategories') Asset Category Master
            li.nav-item(class=activePage === 'stock' ? 'active' : '')
              a.nav-link(href='/assets/stock') Stock View
            li.nav-item(class=activePage === 'issue' ? 'active' : '')
              a.nav-link(href='/assets/issue') Issue Asset
            li.nav-item(class=activePage === 'return' ? 'active' : '')
              a.nav-link(href='/assets/return') Return Asset
            li.nav-item(class=activePage === 'scrap' ? 'active' : '')
              a.nav-link(href='/assets/scrap') Scrap Asset
            li.nav-item(class=activePage === 'history' ? 'active' : '')
              a.nav-link(href='/assets/history') Asset History

    block content

    block scripts
      script(src='https://code.jquery.com/jquery-3.5.1.min.js')
      script(src='https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js')
      script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js')
      script.
        window.addEventListener('scroll', function() {
          var navbar = document.querySelector('.navbar');
          if (window.scrollY > 10) {
            navbar.classList.add('scrolled');
          } else {
            navbar.classList.remove('scrolled');
          }
        });


